{
  "name": "modus-framework-styleguide",
  "version": "1.0.0",
  "homepage": "https://modus.trimble.com",
  "description": "The Modus Framework styleguide static site built with Hugo",
  "scripts": {
    "build": "npx hugo --minify",
    "deploy": "cross-env s3-deploy './public/**/*.{css,js,map,ico,png,jpg,svg,html}' --cwd './public/' --region us-east-1 --bucket prod-styles-trimblemaps --cache 0",
    "deploy:dev": "cross-env s3-deploy './public/**/*.{css,js,map,ico,png,jpg,svg,html}' --cwd './public/' --region us-east-1 --bucket dev-styles-trimblemaps --cache 0",
    "css:lint": "stylelint \"assets/css/*.scss\"",
    "serve": "npx hugo serve",
    "svgo:base": "svgo --config=_svgo.yml --recursive",
    "svgo": "npm-run-all --parallel \"svgo:base -- --folder=static\"",
    "test": "npm-run-all css:lint"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@bitbucket.trimble.tools/tmds/modus-styleguide.git"
  },
  "bugs": {
    "url": "https://jira.trimble.tools/projects/ETHER/issues/"
  },
  "author": "Trimble",
  "license": "MIT",
  "devDependencies": {
    "@trimbleinc/modus-framework": "^0.9.5",
    "autoprefixer": "10.0.2",
    "hugo-bin": "^0.66.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.9",
    "postcss-cli": "^8.3.0",
    "s3-deploy": "^1.4.0",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "svgo": "^1.3.2"
  },
  "hugo-bin": {
    "buildTags": "extended"
  }
}
